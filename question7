public class nonzero 
{
    public static void main(String[] args) {
        int[] nums = {0, 1, 0, 3, 12};
        int[] newarr = new int[7];

        int index = 0;
        for(int i=0; i<nums.length;i++)
        {
           if(nums[i]!=0)
             {
                newarr[index++]=nums[i];
             }
             while (index < nums.length) {
                newarr[index++] = 0;
            }
        }
        System.out.println(newarr);
}
}
